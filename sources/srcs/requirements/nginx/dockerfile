FROM nginx:alpine

ARG STATICFILES_DIR

RUN mkdir -p /etc/container-init.d ${STATICFILES_DIR} /etc/nginx/ssl/

COPY ./templates/404.html /usr/share/nginx/html/
COPY ./templates/404.css ${STATICFILES_DIR}

ENTRYPOINT [ "nginx", "-g", "daemon off;" ]
# ENTRYPOINT [ "tail", "-f", "/dev/null" ]