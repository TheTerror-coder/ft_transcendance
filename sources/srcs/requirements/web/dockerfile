FROM python:3.10-alpine

ARG STATICFILES_DIR
ARG HOST_IP

ENV HOST_IP=${HOST_IP}

WORKDIR /usr/src/apps

RUN pip install --upgrade pip

RUN apk add --no-cache curl
RUN mkdir -p /etc/container-init.d ${STATICFILES_DIR}

COPY --chown=root:root --chmod=700 ./tools/requirements.txt .

COPY --chown=root:root --chmod=700 ./tools/script.sh /etc/container-init.d

RUN pip install -r requirements.txt --timeout=100 --index-url=https://pypi.org/simple

RUN pip install django-cors-headers --timeout=100 --index-url=https://pypi.org/simple

COPY ./tools/HOST_IP.sh .

COPY ./srcs/ .

# CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]

RUN chmod +x ./HOST_IP.sh

RUN ./HOST_IP.sh

CMD [ "/etc/container-init.d/script.sh" ]
# ENTRYPOINT [ "tail", "-f", "/dev/null" ]
