ARG STACK_VERSION=8.14.1

FROM logstash:${STACK_VERSION}

COPY ./conf/my-logstash.yml ./config/my-logstash.yml
# ENTRYPOINT ["/usr/local/bin/docker-entrypoint"]
ENTRYPOINT [ "bash", "/usr/share/logstash/config/script.sh" ]
